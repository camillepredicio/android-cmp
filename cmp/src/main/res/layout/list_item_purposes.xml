<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="purpose"
                type="io.predic.cmp_sdk.models.Purpose"
        />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:animateLayoutChanges="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{purpose.visibility}">
            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@{purpose.icon}"
                    android:id="@+id/purposeIconImageView"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
            />
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/purposeIconImageView"
                    android:layout_toStartOf="@+id/purposeSwitch"
                    android:layout_centerVertical="true">
                <TextView
                        android:text="@{purpose.title}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/purposeTitleTextView"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toStartOf="@+id/purposeSwitch"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintStart_toEndOf="@+id/purposeIconImageView"
                        android:layout_marginStart="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/purposeContentTextView"/>
                <TextView
                        android:text="@{purpose.content}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/purposeContentTextView"
                        app:layout_constraintEnd_toStartOf="@+id/purposeSwitch"
                        app:layout_constraintStart_toEndOf="@+id/purposeIconImageView"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:maxLines="3"
                        android:ellipsize="end"/>
            </LinearLayout>

            <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/purposeSwitch"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:theme="@style/SwitchTheme"
                    android:layout_alignParentEnd="true"
                    android:checked="@{purpose.enabled}"
            />
        </RelativeLayout>
    </LinearLayout>
</layout>